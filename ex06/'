#include <stdio.h>

int ft_strlen(char *str)
{
    int count;
    count = 0;
    while (*str)
    {
        count++;
        str++;
    }
    return count;
}

int main()
{
    char testStr[] = "Hello, World!";
    int length = ft_strlen(testStr);
    printf("The length of the string \"%s\" is: %d\n", testStr, length);
    return 0;
}
